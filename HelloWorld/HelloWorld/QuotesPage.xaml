<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.QuotesPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
			Android="20, 30, 20, 20"
			WinPhone="20, 40, 20, 20">
        </OnPlatform>
    </ContentPage.Padding>

    <StackLayout>
        <Button Text="Next" Clicked="Button_Clicked"/>
        <Label 
               Text="{Binding Source={x:Reference slider},
                    Path=Value,
                    StringFormat='The font size is: {0:N5}'}"/>
        <Slider x:Name="slider" Maximum="60" Minimum="16" />
        <Label x:Name="currentQuotes" FontSize="{Binding Source={x:Reference slider}, Path=Value}" />
    </StackLayout>

</ContentPage>
